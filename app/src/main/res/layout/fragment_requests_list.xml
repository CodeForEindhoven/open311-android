<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_switcher"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".MainActivity">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/requests_list"
            android:name="org.open311.myapplication.RequestsFragment"
            tools:context=".fragments.RequestsFragment"
            tools:listitem="@layout/cardview_request"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            app:layoutManager="LinearLayoutManager"
            android:dividerHeight="16dp"
            android:padding="10dp"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:listSelector="@android:color/transparent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <FrameLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/intro_container"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.IntroFragment">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/AppTheme.PolicyTitle"
                    android:text="Meldloket Eindhoven" />

                <TextView
                    style="@style/AppTheme.PolicyText"
                    android:text="Het meldloket is Eindhoven's meldpunt voor niet noodgevallen." />

                <TextView
                    style="@style/AppTheme.PolicyText"
                    android:text="Als u iets meldt dan wordt het hier getoond. Swipe naar beneden om de lijst te verversen." />

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</ViewSwitcher>
